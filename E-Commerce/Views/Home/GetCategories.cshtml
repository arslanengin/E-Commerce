@model IEnumerable<E_Commerce.Entity.Category>
@{
    var selectedCategory = Url.RequestContext.RouteData.Values["id"];
}

<ul class="list-group">
    <li class="list-group-item">
        <a href="/Home/List">
            Tüm Kategoriler
        </a>
        @foreach (var item in Model)
        {
            if (selectedCategory != null)
            {
                if (item.Id == int.Parse(selectedCategory.ToString()))
                {
                    //seçilen kategori ile route id si birbirine eşit
                <li class="list-group-item active">
                    <a href="/Home/List/@item.Id">
                        <i class="fas fa-angle-double-right"></i>
                        @item.Name
                    </a>
                </li>
                }
                else
                {
                   <li class="list-group-item">
                    <a href="/Home/List/@item.Id">
                        <i class="fas fa-angle-double-right"></i>
                        @item.Name
                    </a>
                </li>

                }
            }

        
        else
        {
            <li class="list-group-item">
                <a href="/Home/List/@item.Id">
                    <i class="fas fa-angle-double-right"></i>
                    @item.Name
                </a>
            </li>
        }

    }


    </ul>
